extends layout

block content
    // END nav
    section.home-slider.owl-carousel
      .slider-item(style="background-image: url('images/bg_1.jpg');", data-stellar-background-ratio='0.5')
        .overlay
        .container
          .row.slider-text.align-items-end
            .col-md-10.col-sm-12.ftco-animate.mb-4
              p.breadcrumbs
                span.mr-2
                  a(href='index.html') Home
                span Booking
              h1.mb-3 Booking
    section.ftco-section
      .container
        .row.d-flex
          .col-md-12.ftco-animate.makereservation.p-5.bg-light
            form(action='#')
              h2.mb-4 Contact Details
              .row.mb-5
                .col-md-4
                  .form-group
                    label(for='name') First Name
                    input.form-control(type='text', placeholder='First Name')
                .col-md-4
                  .form-group
                    label(for='name') Last Name
                    input.form-control(type='text', placeholder='Last Name')
                .col-md-4
                  .form-group
                    label(for='') Select Country
                    .select-wrap.one-third
                      .icon
                        span.ion-ios-arrow-down
                      select.countrypicker.form-control(data-live-search='true', data-default='Country of Passport', data-flag='false')
                .col-md-4
                  .form-group
                    label(for='') Email
                    input.form-control(type='text', placeholder='Your Email')
                .col-md-4
                  .form-group
                    label(for='') Address
                    input.form-control(type='text', placeholder='Phone')
                .col-md-4
                  .form-group
                    label(for='') Phone
                    input.form-control(type='text', placeholder='Phone')
              .row.mb-5
                .col-md-12
                  h2.mb-4 Guest Details
                .col-md-12
                  h3.h4 Superior Room - Twin - Best available
                .col-md-6
                  .form-group
                    label(for='name') First Name
                    input.form-control(type='text', placeholder='First Name')
                .col-md-6
                  .form-group
                    label(for='name') Last Name
                    input.form-control(type='text', placeholder='Last Name')
                .col-md-6
                  .form-group
                    label(for='') Select Country
                    .select-wrap.one-third
                      .icon
                        span.ion-ios-arrow-down
                      select.countrypicker.form-control(data-live-search='true', data-default='Country of Passport', data-flag='false')
                .col-md-6
                  .form-group
                    label(for='') Date of Birth
                    input#birth_date.form-control(type='text', placeholder='Birth Date')
              .row.mb-5
                .col-md-12
                  h2.mb-4 Flight Details
                .col-md-6.d-flex
                  .form-group.mr-4
                    label(for='') Arrival Date
                    input#arrival_date.form-control(type='text', placeholder='Date')
                  .form-group
                    label(for='') Arrival Time
                    input#arrival_time.form-control(type='text', placeholder='Time')
                .col-md-6.d-flex
                  .form-group.mr-4
                    label(for='') Departure Date
                    input#departure_date.form-control(type='text', placeholder='Date')
                  .form-group
                    label(for='') Departure Time
                    input#arrival_time.form-control(type='text', placeholder='Time')
              .row.mb-5
                .col-md-12
                  h2.mb-4 Payment Details
                .col-md-4
                  .form-group
                    label(for='') Card Type
                    .select-wrap.one-third
                      .icon
                        span.ion-ios-arrow-down
                      select.form-control(name='', id='')
                        option(value='') Visa
                        option(value='') Master Card
                        option(value='') Credit Card
                .col-md-4
                  .form-group
                    label(for='name') Card No
                    input.form-control(type='text', placeholder='')
                .col-md-4
                  .form-group
                    label(for='name') Name on Card
                    input.form-control(type='text', placeholder='')
                .col-md-6
                  .form-group.mr-4
                    label(for='') Expiration Date
                    input#expiration_date.form-control(type='text', placeholder='')
    section.instagram
      .container-fluid
        .row.no-gutters.justify-content-center.pb-5
          .col-md-7.text-center.heading-section.ftco-animate
            h2
              span.icon-instagram
              |  Instagram
        .row.no-gutters
          .col-sm-12.col-md.ftco-animate
            a.insta-img.image-popup(href='images/insta-1.jpg', style='background-image: url(images/insta-1.jpg);')
              .icon.d-flex.justify-content-center
                span.icon-instagram.align-self-center
          .col-sm-12.col-md.ftco-animate
            a.insta-img.image-popup(href='images/insta-2.jpg', style='background-image: url(images/insta-2.jpg);')
              .icon.d-flex.justify-content-center
                span.icon-instagram.align-self-center
          .col-sm-12.col-md.ftco-animate
            a.insta-img.image-popup(href='images/insta-3.jpg', style='background-image: url(images/insta-3.jpg);')
              .icon.d-flex.justify-content-center
                span.icon-instagram.align-self-center
          .col-sm-12.col-md.ftco-animate
            a.insta-img.image-popup(href='images/insta-4.jpg', style='background-image: url(images/insta-4.jpg);')
              .icon.d-flex.justify-content-center
                span.icon-instagram.align-self-center
          .col-sm-12.col-md.ftco-animate
            a.insta-img.image-popup(href='images/insta-5.jpg', style='background-image: url(images/insta-5.jpg);')
              .icon.d-flex.justify-content-center
                span.icon-instagram.align-self-center
