include partials/header
section.home-slider.owl-carousel
    .slider-item(style="min-height: 5px; background-image: url('/images/bg_2.jpg');")
// ================ Start banner Area =================
section.banner-area.relative
.container
    .row.height.align-items-center.justify-content-center
        .banner-content.col-lg-6.offset-3
            h1(style="color:orange;") User Admin
            hr
            .breadcrmb
                p
                    a(href='index.html' style="color:orange;") Databases
                    span.lnr.lnr-arrow-right
                    a(href='about.html' style="color:orange;") From  ../models
                    a(href='/contactDatabase' style="color:black;")
                        li Contact Database
                    a(href="/eventDatabase" style="color:black;")
                        li Event Database
                    a(href="/userDatabase" style="color:black;")
                        li User Database
div.row
  div.col-lg-4.offset-lg-4
      form.contact-form(action=`/event/email/${id}` method='POST')
        .row
            .col-lg-12.d-flex.flex-column.mb-20
                input(type='hidden', name='_csrf', value=_csrf)
                input.form-control(name='name' placeholder='Sender' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Contact Name'" required='' type='text')
            .col-lg-12.d-flex.flex-column.mb-20
                input.form-control(name='emailAddress' placeholder='Recipient Email Address' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'" required='' type='email')
            .col-lg-12.d-flex.flex-column
                textarea.form-control(name='postMessage' placeholder='Post a message' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Post a message'" required='')
            .col-lg-12.d-flex.justify-content-end
                input.search-submit.btn.btn-primary(type='submit' value='Send Email')
            .alert-msg
include partials/footer
